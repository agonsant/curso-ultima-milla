{
  "compilerOptions": {
    "target": "es2021",                                  
    "module": "commonjs",                           
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",                       
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "importHelpers": true,   
    "allowUmdGlobalAccess": true,                                    
  },
  "include": ["src"]
}
