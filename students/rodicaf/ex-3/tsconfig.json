{
  "compilerOptions": {
    "target": "es2021",                                  
    "module": "ES2022",  
    "lib": ["ES2021", "DOM"],                              
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",                       
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
